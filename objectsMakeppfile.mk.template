CREATE_DIR:=$(shell if [ ! -e #FOLDER# ]; then mkdir -p #FOLDER#; echo "mkdir -p #FOLDER#"; fi)

# This recreates the Makeppfile responsible for building the objects
./#FOLDER#/Makeppfile: ./#FOLDER#/Makeppfile.auto
    @if [ -e ${output} ] && diff --brief ${input} ${output} >/dev/null ; then \
        true; \
    else \
        echo "cp ${input} ${output}"; \
        cp ${input} ${output}; \
    fi

./#FOLDER#/Makeppfile.auto: FORCE ../scripts/objectsMakeppfile.sh ../scripts/MakeppfileForObjectsTemplate
    @../scripts/objectsMakeppfile.sh ${MODULEDIR} #SPECIAL_FLAGS_NAME# > ${output}
    @if [ -e ./#FOLDER#/Makeppfile ] && diff --brief ${output} ./#FOLDER#/Makeppfile >/dev/null ; then \
        true; \
    else \
        echo "../scripts/objectsMakeppfile.sh ${MODULEDIR} #SPECIAL_FLAGS_NAME# > ${output}"; \
    fi
